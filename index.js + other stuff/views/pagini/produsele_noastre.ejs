<!DOCTYPE html>
<html>
    
    <head>
        <meta name="keywords" content="paine,prajituri,proaspata">
        <meta name="description" content="Cea mai buna paine din romania">

        <%- include("../fragmente/head.ejs") %>

        <link rel="stylesheet" href="/resurse/css/produsele_noastre.css">
        <link rel="stylesheet" href="/resurse/css/filtre.css">
        <script type="text/javascript" src=/resurse/js/filtre.js></script>
        <title>Husse</title>
        
    </head>
    <body>
        <%- include("../fragmente/header.ejs") %>
    <main>
        <section id="filtre">
            <div class="input_filtre">
                <label>Model:
                    <input type="text" id="input_nume">
                </label>
                <br>
                <label>Numar maxim de calorii:
                    <span>200</span>
                    <input type="range" id="input_calorii" min=200 max=2000 step="150" value="2000" >
                    <span>2000</span>
                </label>
            </div>
            <button class="buton_f" id="buton_filtrare">
                Filtreaza!
            </button>
            <button class="buton_f" id="buton_asc">A
                <i class="fas fa-sort-amount-up"></i>
            </button>
            <button class="buton_f" id="buton_desc">D
                <i class="fas fa-sort-amount-down"></i>
            </button>
            <button class="buton_f" id="buton_reset" onclick="window.location.href = '/produsele_noastre'">
                Reseteaza
            </button>
            <script src="/resurse/js/filtre.js">
                
            </script> 
            
        </section>
       
        <section id="produse">
            <div class="grid-produse">
                <% for( let prod of locals.produse) { %>
                    <article class="produs" >
                        <h3 class="nume"><a href="/produs/<%-prod.id %>" ><span class="val-nume"><%- prod.nume%></span></a></h3>
                        <div class="info-prod">
                            <table style="height: 300px; width:auto">
                                <tr>
                                  <th>Caracteristica</th>
                                  <th>Valoare</th>
                                </tr>
                                <tr>
                                  <td>Pret</td>
                                  <td><span class="val-pret"><%- prod.pret%></span> RON</a></td>
                                </tr>
                                <tr>
                                    <td>Numar calorii</td>
                                    <td><span class="val-calorii"><%- prod.calorii%> </span></td>
                                </tr>
                                <tr>
                                    <td>Greutate</td>
                                    <td><span class="val-greutate"><%- prod.greutate%> </span></td>
                                </tr>
                              </table>

                        </div>
                        <div>
                            <figure id="poza_produs">
                                <a href="/produs/<%-prod.id %>" ><img src="/resurse/produse/<%- prod.imagine %>" style="width:auto;height:350px;padding:10px;" alt="[imagine <%- prod.nume %>]" /></a>
                            </figure>
                        </div>
                        <label class="selecteaza-cos">
                            SelecteazÄƒ:<br/>
                            <input type="checkbox" class="select-cos" value="<%-prod.id %>" autocomplete="off">
                        </label>
                    </article>
                <% }%>
            </div>
        </section>
    </main>
        <%- include("../fragmente/footer.ejs") %>
    </body>
</html>