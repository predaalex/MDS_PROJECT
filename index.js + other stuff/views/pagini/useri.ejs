<!DOCTYPE html>
<html>
    
    <head>
        <meta name="keywords" content="husa,telefon,silicon,personalizata,samsung,iphone,huawei,xiaomi,htc">
        <meta name="description" content="Cele mai bune huse pentru telefonul tau, la cel mai bun pret.">

        <%- include("../fragmente/head.ejs") %>

        <link rel="stylesheet" href="/resurse/css/useri.css" type="text/css" />

        <title>Husse</title>
    </head>
    <body>
        <%- include("../fragmente/header.ejs") %>
    <main>
        <div class="afisaj">
            <h2>Useri</h2>
    
            <table id="useri">
              <tr>
                <th>id</th><th>Username</th><th>Nume</th><th>Prenume</th><th>Data</th><th>Rol</th>
              </tr>
    
              <% for (var i = 0; i < useri.length; i++) { 
                    if(useri[i].rol=="comun"){
                    %>
                    <tr>
                      <td><%= useri[i].id %></td>
                      <td><%= useri[i].username %></td>
                      <td><%= useri[i].nume %></td>
                      <td><%= useri[i].email %></td>
                      <%  
                        d=new Date(useri[i].data_adaugare)
                        sir_data=`${d.getDate()}/${d.getMonth()}/${d.getFullYear()} ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}`
                      %>
                      <td><%=  sir_data %></td>
                       <td><%=  useri[i].rol %></td>
                    </tr> 
       
                    <% } %>			
              <% } %>
            </table>
            
            <p>Sterge utilizator</p>
            <form id="sterge" method="post" action="/sterge_utiliz">
                <label>
                    Id: <input type="text" name="id_utiliz" value="">
                </label>
                
                <input type="submit" value="Submit">
            </form>
        </div>
    </main>
        <%- include("../fragmente/footer.ejs") %>
    </body>
</html>